  // Auto hide success alert after 3 seconds
  setTimeout(() => {
    const alert = document.getElementById("successAlert");
    if (alert) {
      alert.classList.remove("show");
      alert.classList.add("hide");
    }
  }, 3000); // 3 seconds
</script>

